<?xml version="1.0" encoding="UTF-8"?>
<configuration scan="false" debug="false">
    <include resource="org/springframework/boot/logging/logback/base.xml" />

    <appender name="ExceptionTestAppender" class="gov.va.ascent.framework.exception.ExceptionTestAppender">

    </appender>

    <appender name="LogTestAppender" class="gov.va.ascent.framework.log.LogTestAppender">

    </appender>

    <appender name="AspectLoggingTestAppender" class="gov.va.ascent.framework.aspect.AspectLoggingTestAppender">

    </appender>

    <appender name="DateAdapterLoggingTestAppender"
              class="gov.va.ascent.framework.transfer.jaxb.adapters.DateAdapterLoggingTestAppender">

    </appender>

    <appender name="RestProviderHttpResponseCodeAspectLogAppender"
              class="gov.va.ascent.framework.rest.provider.RestProviderHttpResponseCodeAspectLogAppender">

    </appender>

    <appender name="Db4oTestLogAppender"
              class="gov.va.ascent.framework.persist.Db4oTestLogAppender">

    </appender>


    <appender name="STDOUT" class="ch.qos.logback.core.ConsoleAppender">

    </appender>

    <logger name="gov.va.ascent.framework.aspect" level="DEBUG">
        <appender-ref ref="AspectLoggingTestAppender"/>
    </logger>
    <logger name="gov.va.ascent.framework.exception" level="DEBUG">
        <appender-ref ref="ExceptionTestAppender"/>
    </logger>
    <logger name="gov.va.ascent.framework.log" level="DEBUG">
        <appender-ref ref="LogTestAppender"/>
    </logger>
    <logger name="gov.va.ascent.framework.transfer.jaxb.adapters" level="DEBUG">
        <appender-ref ref="DateAdapterLoggingTestAppender"/>
    </logger>
    <logger name="gov.va.ascent.framework.rest.provider" level="DEBUG">
        <appender-ref ref="RestProviderHttpResponseCodeAspectLogAppender"/>
    </logger>
    <logger name="gov.va.ascent.framework.persist" level="DEBUG">
        <appender-ref ref="Db4oTestLogAppender"/>
    </logger>

    <root level="DEBUG">
        <appender-ref ref="STDOUT"/>
    </root>


</configuration>